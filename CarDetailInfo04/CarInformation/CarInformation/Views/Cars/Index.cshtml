
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <h3>Car Details</h3>
        <div class="d-flex justify-content-sm-end mb-1">
            @Html.ActionLink("Create", "Create", "Cars", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        @Html.Action("CarList", "Cars")
    </div>

</div>
@section scripts {
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        function onBegin(ev) {
            if (!confirm("Are you sure to delete?")) ev.preventDefault();
        }
        function onSuccess(r) {
            if (r.success) {
                $("#tr_" + r.id).remove();
            }
            else {
                alert("Cannot delete data with realted child.")
            }
        }
    </script>
}



